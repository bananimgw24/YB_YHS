<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Who are you ?"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"            >
            <RadioButton
                android:id="@+id/r0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Entrepreneur" />
            <RadioButton
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aspiring entrepreneur" />
            <RadioButton
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Tell us about your startup :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/compName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Company Name"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Date/Year of incorporation"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>

        <EditText
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Office Address"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>

        <EditText
            android:id="@+id/eid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>

        <EditText
            android:id="@+id/pno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>


        <EditText
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Area Of Business"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Rank (1-6) the following Digital Banking services in order of preference, for your business :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp1"
                android:text="- Digital Working Capital management (cash flow and liquidity management)"
                android:layout_marginTop="10dp" />



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp1"
                android:layout_weight="0.08"
                android:layout_alignParentTop="true"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_above="@+id/etp2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp2"
                android:text="- Payments management such as API Banking, UPI, P2P/ P2M Wallet, amongst others"
                android:layout_marginTop="10dp" />



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp2"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp3"
                android:text="- Point of Sale                                                                      "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp3"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp4"
                android:text="- Payment Gateway                                                             "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp4"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:id="@+id/tvp5"
                android:text="- Net Banking                                                                       "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp5"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/other3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Any Other (Please Specify)"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Please share any other service not covered above that your Bank should provide :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextbg"
            android:padding="13dp"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Rank (1-6) the following services in order of priority you need for your business :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp6"
                android:text="- Co-working space                                               "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp6"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp7"
                android:text="- Angel / Venture Capital Funding                       "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp7"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp8"
                android:text="- Debt Financing / Business Loans                     "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp8"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp9"
                android:text="- Incubation / Mentorship services                     "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp9"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.60"
                android:id="@+id/tvp10"
                android:text="- Marketing &amp; PR Assistance                               "
                android:layout_marginTop="10dp"/>



            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etp10"
                android:layout_weight="0.08"
                android:gravity="right"
                android:inputType="number"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>


        <EditText
            android:id="@+id/other5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Any Other (Please Specify)"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Pick upto a maximum of 3 challenges listed below, faced by your business on basis of priority :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>



        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talent Acquisition "
            android:checked="false" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Acceptance of the product and sustained Revenue Generation "
            android:checked="false"
            android:layout_above="@+id/checkBox1"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignStart="@+id/checkBox1" />


        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Mentorship to scale up business "
            android:checked="false"
            android:layout_above="@+id/checkBox1"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignStart="@+id/checkBox1" />


        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Marketing &amp; Branding assistance "
            android:checked="false"
            android:layout_above="@+id/checkBox1"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignStart="@+id/checkBox1" />


        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fragmented Market and lack of organized distribution network "
            android:checked="false"
            android:layout_above="@+id/checkBox1"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignStart="@+id/checkBox1" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raising Fresh Capital "
            android:checked="false"
            android:layout_above="@+id/checkBox1"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_alignStart="@+id/checkBox1" />

        <EditText
            android:id="@+id/other6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:hint="Any Other (Please Specify)"
            android:background="@drawable/edittextbg"
            android:padding="3dp"/>



        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. How useful are the Governmentâ€™s national development campaigns such as DigitalIndia, Make in India, Startup India, Skill India, amongst others ?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>
        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"            >
            <RadioButton
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Useful" />
            <RadioButton
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Useful" />
            <RadioButton
                android:id="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indifferent" />
        </RadioGroup>



        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Please share any other service not covered above that your Bank should provide :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Please Elaborate"
            android:background="@drawable/edittextbg"
            android:padding="20dp"/>


        <Button
            android:id="@+id/nextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_marginTop="40dp"
            android:background="#12a5f4"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_marginBottom="40dp"/>

</LinearLayout>
</ScrollView>